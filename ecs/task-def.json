{
    "family": "watchTower-task",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::288761756960:role/ecsTaskExecutionRole",
    "containerDefinitions": [
        {
            "name": "watchtower-container",
            "image": "288761756960.dkr.ecr.us-east-1.amazonaws.com/watchtower-repo:latest",
            "essential": true,
            "memory": 512,
            "cpu": 256,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],   
            "environment": [
                {
                    "name": "PAYLOAD_SECRET",
                    "value": "SuperSecretKey123"
                }
            ]
        }
    ]
}