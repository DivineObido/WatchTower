{
    "family": "watchTower-task",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::288761756960:role/ecsExecutionRole",
    "containerDefinitions": [
        {
            "name": "watchtower-container",
            "image": "288761756960.dkr.ecr.us-east-1.amazonaws.com/watchtower-repo:latest",
            "essential": true,
            "memory": 512,
            "cpu": 256,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ], 
            "secrets" : [
                {
                   "name": "PAYLOAD_SECRET",
                    "valueFrom": "arn:aws:secretsmanager:us-east-1:288761756960:secret:watchTower_payload_secret-dQJXGE"
                },
                {
                    "name": "DATABASE_URI",
                    "value": "arn:aws:secretsmanager:us-east-1:288761756960:secret:watchTower_database_uri_secret-iwtEwv"
                }
            ],

            "environment": [
                {
                    "name": "NODE_ENV",
                    "value": "production"
                },
                {
                    "name": "PAYLOAD_CONFIG_PATH",
                    "value": "dist/payload/payload.config.js"
                },
                {
                    "name": "PAYLOAD_PUBLIC_SERVER_URL",
                    "value": "https://buynsell.work.gd"
                }
            ], 
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/watchTower-log-group",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}