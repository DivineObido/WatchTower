{
    "family": "watchTower-task",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::288761756960:role/ecsTaskExecutionRole",
    "containerDefinitions": [
        {
            "name": "watchtower-container",
            "image": "288761756960.dkr.ecr.us-east-1.amazonaws.com/watchtower-repo:latest",
            "essential": true,
            "memory": 512,
            "cpu": 256,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],   
            "environment": [
                {
                    "name": "PAYLOAD_SECRET",
                    "value": "SuperSecretKey123"
                },
                {
                    "name": "NODE_ENV",
                    "value": "production"
                },
                {
                    "name": "PAYLOAD_CONFIG_PATH",
                    "value": "dist/payload/payload.config.js"
                },
                {
                    "name": "PAYLOAD_PUBLIC_SERVER_URL",
                    "value": "http://buynsell.work.gd"
                },
                {
                    "name": "DATABASE_URI",
                    "value": "mongodb://127.0.0.1/payload-template-ecommerce"
                }
            ]
        }
    ]
}